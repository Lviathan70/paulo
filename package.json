{
  "name": "paulo",
  "version": "0.0.3",
  "description": "Paulo bot for the StremioAddons discord",
  "main": "build/index.js",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dist": "tsc --build tsconfig.production.json",
    "dist:clean": "rimraf dist && npm run dist",
    "serve": "node build/index.js",
    "serve:watch": "nodemon build/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Sleeyax",
  "license": "MIT",
  "dependencies": {
    "command.ts": "^2.1.0",
    "discord.js": "^12.4.1",
    "@types/node": "^14.14.8",
    "typescript": "^4.0.5"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "dotenv": "^8.2.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "prettier --write"
  }
}
